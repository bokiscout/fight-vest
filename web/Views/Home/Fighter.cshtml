@model FighterProfileViewModel

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> Профил на борец</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                    <div class="profile_img">
                        <div id="crop-avatar">
                            <!-- Current avatar -->
                            <img class="img-responsive avatar-view" src="@Model.Fighter.Fighter.AvatarUrl" alt="Avatar" title="Change the avatar">
                        </div>
                    </div>
                    <h3>@Model.Fighter.Fighter.FullName</h3>

                    <ul class="list-unstyled user_data">
                        <li>
                            <i class="fa fa-map-marker user-profile-icon"></i> @Model.Fighter.Fighter.City, @Model.Fighter.Fighter.Country
                        </li>

                        <li>
                            <i class="fa fa-briefcase user-profile-icon"></i> @Model.Fighter.Fighter.FighterCategory.Name
                        </li>
                    </ul>

                    <br />

                    <!-- start skills -->
                    <h4>Статистики</h4>
                    <ul class="list-unstyled user_data">
                        <li>
                            <p>Вкупно борби</p>
                            <div class="progress progress_sm">
                                <div class="progress-bar bg-purple" role="progressbar" data-transitiongoal="100"></div>
                            </div>
                        </li>
                        <li>
                            <p>Победени борби</p>
                            <div class="progress progress_sm">
                                <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="@(Model.Fighter.WonFights * 10) / @Model.Fighter.TotalFights"></div>
                            </div>
                        </li>
                        <li>
                            <p>Изгубени борби</p>
                            <div class="progress progress_sm">
                                <div class="progress-bar bg-red" role="progressbar" data-transitiongoal="@(Model.Fighter.LostFights * 10) / @Model.Fighter.TotalFights"></div>
                            </div>
                        </li>
                    </ul>
                    <!-- end of skills -->

                </div>
                <div class="col-md-9 col-sm-9 col-xs-12">

                    <div class="profile_title">
                        <div class="col-md-6">
                            <h2>Извештаи за активност</h2>
                        </div>
                        <div class="col-md-6">
                            <div id="reportrange" class="pull-right" style="margin-top: 5px; background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #E6E9ED">
                                <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                                <span>December 30, 2014 - January 28, 2015</span> <b class="caret"></b>
                            </div>
                        </div>
                    </div>
                    <!-- start of user-activity-graph -->
                    <div id="graph_bar" style="width:100%; height:280px;"></div>
                    <!-- end of user-activity-graph -->

                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Следни борби</a>
                            </li>
                            <li role="presentation" class="">
                                <a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Изминати борби</a>
                            </li>
                            <li role="presentation" class="">
                                <a href="#tab_content3" role="tab" id="profile-tab2" data-toggle="tab" aria-expanded="false">Освоени пехари и медали</a>
                            </li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">

                                <!-- start recent activity -->
                                <ul class="messages">
                                    @foreach (var fight in Model.NextFights)
                                    {
                                        <li>
                                            <img src="~/images/fight.png" class="avatar" alt="fight-icon">
                                            <div class="message_date">
                                                <h3 class="date text-info">@String.Format("{0:dd}", fight.StartTime)</h3>
                                                <p class="month">@string.Format("{0:MMM}", fight.StartTime)</p>
                                            </div>
                                            <div class="message_wrapper">
                                                <h4 class="heading">@fight.FightFighters.FirstOrDefault(f => f.FighterID != Model.Fighter.ID).Fighter.FullName</h4>
                                                <div>
                                                    <i class="fa fa-map-marker"></i>
                                                      @string.Format("{0}, {1}, {2}", fight.Address, fight.City, fight.Country)
                                                </div>
                                                <p>
                                                    <i class="fa fa-graduation-cap"></i>
                                                    @fight.FightType.Name
                                                </p>
                                                <p>
                                                    @fight.Description
                                                </p>
                                                <div>
                                                    Шанси за победа <b>(43%)</b>
                                                    <div class="progress progress_sm">
                                                        <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" data-transitiongoal="43" aria-valuenow="43" style="width: 43%;"></div>
                                                    </div>
                                                </div>
                                                <br />
                                            </div>
                                        </li>
                                    }
                                </ul>
                                <!-- end recent activity -->

                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">

                                <!-- start user projects -->
                                <table class="data table table-striped no-margin">
                                    <thead>
                                        <tr>
                                            <th>Датум</th>
                                            <th>Противник</th>
                                            <th>Локација</th>
                                            <th class="hidden-phone">Тип на борба</th>
                                            <th>Ефикасност</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var fight in Model.PreviousFights)
                                        {
                                        <tr>
                                            <td>@string.Format("{0:dd MMM yyyy}", @fight.StartTime)</td>
                                            <td>@fight.FightFighters.FirstOrDefault(f => f.FighterID != Model.Fighter.ID).Fighter.FullName</td>
                                            <td>@string.Format("{0}, {1}, {2}", fight.Address, fight.City, fight.Country)</td>
                                            <td class="hidden-phone">@fight.FightType.Name</td>
                                            <td class="vertical-align-mid">
                                                <div class="progress">
                                                    <div class="progress-bar progress-bar-danger" data-transitiongoal="35"></div>
                                                </div>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- end user projects -->

                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="tab_content3" aria-labelledby="profile-tab">
                                <p>
                                    Во моментов овој панел не е имплементиран
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>