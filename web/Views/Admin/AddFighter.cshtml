@model AddFighterViewModel

<div class="page-title">
    <div class="title_left">
        <h3>Додади борец</h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-xs-12">
                        <form class="form-horizontal form-label-left input_mask"
                        asp-controller="Admin" asp-action="PostAddFighter" method="post">
                            <div class="col-md-6">
                                    <button class="btn btn-primary" type="file">Избери слика</button>         
                            </div>
                            <div class="col-md-6">
                                <div class="col-xs-12 form-group has-feedback">
                                <label>Име</label>
                                <input asp-for="FirstName" type="text" class="form-control has-feedback-left" placeholder="First Name">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>

                            <div class="col-xs-12 form-group has-feedback">
                                <label>Презиме</label>
                                <input asp-for="LastName" type="text" class="form-control has-feedback-left" placeholder="Last Name">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>
                            
                            <div class="col-xs-12 form-group has-feedback">
                                <label>Датум на раѓање</label>
                                <input asp-for="BirthDate" type="date" class="form-control has-feedback-left" placeholder="Date of Birth">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>

                            <div class="col-xs-12 form-group has-feedback">
                                <label>Категорија</label>
                                <select asp-for="CategoryID" asp-items="Model.Categories" class="form-control has-feedback-left" placeholder="Категорија">
                                </select>
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                <button type="submit" class="btn btn-success pull-right">Submit</button>
                                </div>
                            </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>