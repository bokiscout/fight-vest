@model AddFightViewModel

<div class="page-title">
    <div class="title_left">
        <h3>Додади борба</h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-xs-12">
                        <form class="form-horizontal form-label-left input_mask" 
                        asp-controller="Admin" asp-action="PostAddFight" method="post">
                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <div class="col-xs-12 form-group has-feedback">
                                        <label>Држава</label>
                                        <input asp-for="Fight.Country" type="text" class="form-control has-feedback-left" placeholder="Country">
                                        <span class="fa fa-location-arrow form-control-feedback left" aria-hidden="true"></span>
                                    </div>

                                    <div class="col-xs-12 form-group has-feedback">
                                        <label>Град</label>
                                        <input asp-for="Fight.City" type="text" class="form-control has-feedback-left" placeholder="City">
                                        <span class="fa fa-location-arrow form-control-feedback left" aria-hidden="true"></span>
                                    </div>

                                    <div class="col-xs-12 form-group has-feedback">
                                        <label>Адреса</label>
                                        <input asp-for="Fight.Address" type="text" class="form-control has-feedback-left" placeholder="Address">
                                        <span class="fa fa-location-arrow form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                    
                                    <div class="col-xs-12 form-group has-feedback">
                                        <label>Време на започнување</label>
                                        <input asp-for="Fight.StartTime" type="date" class="form-control has-feedback-left" placeholder="Start Time">
                                        <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
                                    </div>

                                    <div class="col-xs-12 form-group has-feedback">
                                        <label>Време на завршување</label>
                                        <input asp-for="Fight.EndTime" type="date" class="form-control has-feedback-left" placeholder="End Time">
                                        <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
                                    </div>

                                    <div class="col-xs-12 form-group has-feedback">
                                        <label>Тип на борба</label>
                                        <select asp-for="Fight.FightTypeID" asp-items="Model.FightTypes" class="form-control has-feedback-left" placeholder="Fight Type">
                                        </select>
                                        <span class="fa fa-briefcase form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-6">
                                      <div class="col-xs-12 form-group has-feedback">
                                        <label>Прв Борец</label>
                                        <select asp-for="FirstFighter" asp-items="Model.Fighters" class="form-control has-feedback-left" placeholder="First Fighter">
                                        </select>
                                        <span class="fa fa-briefcase form-control-feedback left" aria-hidden="true"></span>
                                    </div>

                                    <div class="col-xs-12 form-group has-feedback">
                                        <label>Втор Борец</label>
                                        <select asp-for="SecondFighter" asp-items="Model.Fighters" class="form-control has-feedback-left" placeholder="Second Fighter">
                                        </select>
                                        <span class="fa fa-briefcase form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                    
                                    <div class="col-xs-12 form-group has-feedback">
                                        <label>Број на Рунди</label>
                                        <input value="1" min="1" asp-for="NumberOfRounds" type="number" class="form-control has-feedback-left" placeholder="Number of Rounds">
                                        <span class="fa fa-location-arrow form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                     <div class="ln_solid"></div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <button type="submit" class="btn btn-success pull-right">Зачувај</button>
                                            <a class="btn btn-primary pull-right" asp-controller="Admin" asp-action="Fights">Откажи</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>