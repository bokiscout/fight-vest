@model AddFighterViewModel

<div class="page-title">
    <div class="title_left">
        <h3>Додади борец</h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-xs-12 text-right">
                        <form method="DELETE" asp-controller="Admin" asp-action="Remove" asp-route-id="@Model.Fighter.ID">
                            <button class="btn btn-danger">Избриши</button>
                        </form>
                    </div>
                    <div class="col-xs-12">
                        <form class="form-horizontal form-label-left input_mask" enctype="multipart/form-data"
                        asp-controller="Admin" asp-action="PostEditFighter" method="post">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-12 mb-20">
                                        <img class="img-responsive" src="@Model.Fighter.AvatarUrl"/>                                    
                                    </div>
                                    <div class="col-12 text-center">
                                        <input type="file" name="File" />                                         
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-xs-12 form-group has-feedback">
                                <label>Име</label>
                                <input asp-for="Fighter.FirstName" type="text" class="form-control has-feedback-left" placeholder="First Name">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                                <input type="hidden" asp-for="Fighter.ID"/>
                            </div>

                            <div class="col-xs-12 form-group has-feedback">
                                <label>Презиме</label>
                                <input asp-for="Fighter.LastName" type="text" class="form-control has-feedback-left" placeholder="Last Name">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>

                            <div class="col-xs-12 form-group has-feedback">
                                <label>Држава</label>
                                <input asp-for="Fighter.Country" type="text" class="form-control has-feedback-left" placeholder="Country">
                                <span class="fa fa-flag form-control-feedback left" aria-hidden="true"></span>
                            </div>

                            <div class="col-xs-12 form-group has-feedback">
                                <label>Град</label>
                                <input asp-for="Fighter.City" type="text" class="form-control has-feedback-left" placeholder="City">
                                <span class="fa fa-location-arrow form-control-feedback left" aria-hidden="true"></span>
                            </div>
                            
                            <div class="col-xs-12 form-group has-feedback">
                                <label>Датум на раѓање</label>
                                <input asp-for="Fighter.BirthDate" type="date" class="form-control has-feedback-left" placeholder="Date of Birth">
                                <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
                            </div>

                            <div class="col-xs-12 form-group has-feedback">
                                <label>Категорија</label>
                                <select asp-for="Fighter.FighterCategoryID" asp-items="Model.Categories" class="form-control has-feedback-left" placeholder="Категорија">
                                </select>
                                <span class="fa fa-briefcase form-control-feedback left" aria-hidden="true"></span>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <button type="submit" class="btn btn-success pull-right">Зачувај</button>
                                    <a class="btn btn-primary pull-right" asp-controller="Admin" asp-action="Fighters">Откажи</a>
                                </div>
                            </div>
                            </div>
                        </form>
                        <!--<form>
                                <button type="submit" class="btn btn-danger pull-left">Избриши</button>                            
                        </form>-->
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>