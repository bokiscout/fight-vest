[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/site.css",
      "wwwroot/lib/gentelella/build/css/custom.css",
      "wwwroot/css/global.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js",
      "wwwroot/lib/gentelella/vendors/fastclick/lib/fastclick.js",
      "wwwroot/lib/gentelella/vendors/nprogress/nprogress.js",
      "wwwroot/lib/gentelella/vendors/raphael/raphael.min.js",
      "wwwroot/lib/gentelella/vendors/morris.js/morris.min.js",
      "wwwroot/lib/gentelella/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js",
      "wwwroot/lib/gentelella/production/js/moment/moment.min.js",
      "wwwroot/lib/gentelella/production/js/datepicker/daterangepicker.js",
      "wwwroot/lib/gentelella/build/js/custom.min.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  }
]
